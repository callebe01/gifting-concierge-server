{
  "manifest_version": 3,
  "name": "Gifting Concierge",
  "version": "1.0",
  "description": "Personalized gift recommendations for any occasion",
  "permissions": [
    "activeTab",
    "storage",
    "https://gifting-concierge-server.vercel.app/*"
  ],
  "host_permissions": [
    "https://gifting-concierge-server.vercel.app/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
